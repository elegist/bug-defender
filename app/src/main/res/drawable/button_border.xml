<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="5dp" android:right="5dp" android:left="5dp" android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_brown" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:bottom="10px">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/light_brown"
                android:endColor="@color/middle_brown"
                android:angle="270"
                android:centerColor="@color/brown_overlay" />
            <corners android:radius="3dp" />
            <stroke
                android:width="2dp"
                android:color="@color/grey"
                android:dashGap="2dp"
                android:dashWidth="20dp" />
        </shape>
    </item>

</layer-list>