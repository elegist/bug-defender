<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    android:theme="@style/ThemeOverlay.TowerDefense.FullscreenContainer"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/pause_resume_Button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/sound_on"
        android:backgroundTint="@color/black_overlay"
        android:contentDescription="@string/pause_resume_Button"
        android:onClick="pauseResumeMusic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/game_icon"
        android:paddingBottom="?attr/dialogPreferredPadding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pause_resume_Button"
        app:srcCompat="@drawable/icon_main" />

    <TextView
        android:id="@+id/gameName_text"
        android:layout_width="227dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/game_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/info_button"
        style="@style/Button.Main"
        android:layout_marginTop="32dp"
        android:text="@string/info_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameName_text" />

    <Button
        android:id="@+id/preference_button"
        style="@style/Button.Main"
        android:text="@string/preference_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_button" />

    <Button
        android:id="@+id/about_button"
        style="@style/Button.Main"
        android:onClick="openPopUp"
        android:text="@string/about_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preference_button" />

    <Button
        android:id="@+id/startGame_button"
        style="@style/Button.Main"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:onClick="startGame"
        android:text="@string/startGame_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>